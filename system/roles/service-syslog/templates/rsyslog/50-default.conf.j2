# Ignore opening and closing messages from sudo
:msg, contains, "pam_unix(sudo:session): session opened for user" ~
:msg, contains, "pam_unix(sudo:session): session closed for user" ~

# Ignore opening and closing messages from cron
:msg, contains, "pam_unix(cron:session): session opened for user" ~
:msg, contains, "pam_unix(cron:session): session closed for user" ~

# Ignore Ansible messages
:syslogtag, contains, "ansible-" ~

# Ignore certain DHCP server messages
:msg, contains, "DHCPINFORM from" ~


*.*;kern.none                   -{{ GISLAB_PATH_LOG }}/syslog
kern.*                          -{{ GISLAB_PATH_LOG }}/kern.log
*.emerg                         :omusrmsg:*
